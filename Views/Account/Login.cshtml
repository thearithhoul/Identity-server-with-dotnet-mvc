@using Microsoft.AspNetCore.Mvc.Localization
@model IdentityServer.Models.LoginViewModel
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
    var returnUrl = $"{Context.Request.Path}{Context.Request.QueryString}";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}


<div
    class="  min-h-screen flex flex-col justify-center w-full bg-cover bg-center bg-no-repeat bg-[url('/assets/images/bg-login.png')]">
    @* Language Switcher*@
    <div class="inline-flex absolute top-6 right-6 ml-3 rounded-md shadow">
        <div
            class="inline-flex items-center justify-center p-[15px] border border-transparent text-base rounded-md hover:bg-sky-700 bg-white ">
            <a asp-controller="Account" asp-action="SetLanguage" asp-route-culture="km-KH"
                asp-route-returnUrl="@returnUrl">
                <img class="w-12" src="http://apps.vmpp.com/assets/sso/9aa6af29-af33-40a2-ac3e-9a8829e246ba.png"
                    alt="Khmer Flag">
            </a>
            <span class="p-2"></span>
            <a asp-controller="Account" asp-action="SetLanguage" asp-route-culture="en-US"
                asp-route-returnUrl="@returnUrl">
                <img class="w-12" src="http://apps.vmpp.com/assets/sso/7449b52b-b37f-4872-9a8c-fc29f00764b2.png"
                    alt="English Flag">
            </a>
        </div>
    </div>
    @* login form *@
    <main class="w-full flex flex-col items-center justify-center gap-[60px]">
        @* Welcom text *@
        <div class="flex flex-col items-center font-mkBold text-[#025471] text-center uppercase space-y-[10px]">
            <h1 class="text-[40px]">@localizer["welcome1"]</h1>
            <h1 class="text-[33px]">@localizer["welcome2"]</h1>
        </div>

        <div class="
        space-y-[13px]
        bg-[#FFFDFDCC]
        rounded-[30px]
        p-10
        relative
        border-[1.5px]
        border-solid
        border-[#025471]
        ">
            <div class="flex justify-center">
                <div class="
                border-[1.5px]
                border-solid
                border-[#025471]
                w-[257px]
                rounded-[20px]
                font-mn
               text-[#025471]
                py-[15px]
                text-center
                absolute
                top-[-30px]
                bg-[#FFFFFF]
                ">
                    <span class="text-[20px]">
                        @localizer["login-to-system"]
                    </span>
                </div>
                <div class="pt-[7px]"></div>
                @* Form *@
                <form asp-action="Login" method="post" class="flex flex-col font-mk text-[#025471]">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    @* Username Field *@
                    <div class="py-2 w-[300px]">
                        <label asp-for="Username" class="pb-1.5">@localizer["username-or-email"]</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                                <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"
                                    xmlns="http://www.w3.org/2000/svg" aria-hidden="true"
                                    style="width: 20px; height: 20px;">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z">
                                    </path>
                                </svg>
                            </div>
                            <input asp-for="Username" placeholder="@localizer["username-or-email"]"
                                class="w-full rounded-lg border border-gray-300 pl-10 py-2" autocomplete="Username" />
                        </div>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    @* Password Field *@
                    <div class="py-2">
                        <label asp-for="Password" class="pb-1.5">@localizer["password"]</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                                <svg fill="none" stroke="currentColor" class="w-5 h-5" stroke-width="1.5"
                                    viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z">
                                    </path>
                                </svg>
                            </div>
                            <input asp-for="Password" type="password" placeholder='@localizer["password"]'
                                class="w-full rounded-lg border border-gray-300 pl-10 py-2"
                                autocomplete="current-password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="flex justify-between items-center">
                        <div>
                            <input type="checkbox" id="rememberMe">
                            <label for="rememberMe"
                                class="select-none text-sm font-medium text-gray-700">@localizer["remember-me"]</label>
                        </div>
                        <div class="select-none text-sm font-medium text-gray-700">@localizer["forget-pass"]?</div>
                    </div>

                    <input type="submit" class="mt-4 p-2 bg-[#025471] hover:bg-primary-80
                        focus:ring-4 focus:ring-blue-300
                        border-0
                        font-medium 
                        rounded-lg
                        text-mm
                        text-white
                        drop-shadow-md" value="@localizer["login"]" name="commit">
                </form>

            </div>
            <footer class="flex justify-center pt-4">
                @localizer["copyright"]
            </footer>
        </div>

    </main>

</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}