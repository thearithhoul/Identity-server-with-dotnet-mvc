@model IdentityServer.Models.SeedClientViewModel
@{
    ViewData["Title"] = "Seed Client";
}

<h1>Seed OpenIddict Client</h1>

<p class="text-muted">Create a client the server can recognize during `/connect/authorize`.</p>

@if (TempData["SeedStatus"] is string message)
{
    <div class="alert alert-success mt-3">@message</div>
}

<form method="post" asp-action="Seed" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="ClientId" class="form-label"></label>
        <input asp-for="ClientId" class="form-control" />
        <span asp-validation-for="ClientId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ClientSecret" class="form-label"></label>
        <input asp-for="ClientSecret" class="form-control" />
        <div class="form-text">Leave blank for public clients.</div>
    </div>

    <div class="mb-3">
        <label asp-for="DisplayName" class="form-label"></label>
        <input asp-for="DisplayName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="RedirectUri" class="form-label"></label>
        <input asp-for="RedirectUri" class="form-control" />
        <span asp-validation-for="RedirectUri" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PostLogoutRedirectUri" class="form-label"></label>
        <input asp-for="PostLogoutRedirectUri" class="form-control" />
        <span asp-validation-for="PostLogoutRedirectUri" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Scopes" class="form-label"></label>
        <input asp-for="Scopes" class="form-control" />
        <div class="form-text">Space-separated (example: openid profile email api).</div>
    </div>

    <button type="submit" class="btn btn-primary">Seed Client</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
