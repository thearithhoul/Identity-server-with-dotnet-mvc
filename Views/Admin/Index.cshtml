@{
    ViewData["Title"] = "Admin";
}

<h1>Admin Dashboard</h1>
<p class="text-muted">Signed in as @User.Identity?.Name</p>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Seed OpenIddict Client</h5>
                <p class="card-text">Create a new client with redirect URIs and scopes.</p>
                <a class="btn btn-primary" asp-controller="Clients" asp-action="Index">Open Seeding</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Authorize Endpoint</h5>
                <p class="card-text">Test the Authorization Code flow with your seeded client.</p>
                <a class="btn btn-outline-secondary" href="/connect/authorize">Go to /connect/authorize</a>
            </div>
        </div>
    </div>
</div>
